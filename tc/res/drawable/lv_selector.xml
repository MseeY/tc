<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <!-- 没有焦点时候的背景颜色 -->
    <item android:state_window_focused="false" android:drawable="@color/white"></item>
  <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
  <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/white"></item>
  <!-- 触摸模式下单击时的背景图片 -->
  <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/white"></item>


</selector>
