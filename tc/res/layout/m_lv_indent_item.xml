<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/item_pass_selector">

       <ImageView 
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_right"
       />
    
   <RelativeLayout
    android:id="@+id/item_listview1"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/img"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/lv_nu_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:paddingTop="9dp"
        android:paddingLeft="16dp"
        android:textColor="@color/zwl_register_titlebackground_color"
        android:text="00  01  02  04  01  23  30  33"
        android:textSize="14.0sp"
         style="@style/textaddFont"
        />
    <TextView 
        android:id="@+id/lv_bet_kind_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_nu_item_tv"
        
        android:paddingLeft="16dp"
        android:paddingBottom="11dp"
        android:textSize="14.0sp"
        android:textColor="@color/award_info_tv_title_color"
        android:text="@string/ssp_bg_inform_item_tv"
        
        />
     </RelativeLayout>
     

    
    

</RelativeLayout>
