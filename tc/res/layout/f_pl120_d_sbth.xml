<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <!--  胆拖投注  三不同号布局      和 二不同号     布局共用--> 
	<LinearLayout
	      android:id="@+id/fast3_show_one_Layout"
	      
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  
		  
		  
          android:layout_marginTop="10.0dp"
	      android:layout_marginLeft="10.0dp"
	      android:layout_marginRight="10.0dp"
		  android:orientation="vertical">
	               <TextView 
				          android:id="@+id/fast3_top_tv"
				          android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:layout_weight="1"
				          
				          android:gravity="center_vertical|left"
				       
				          android:textSize="14.0dp"
				          android:textColor="@color/award_info_tv_title_color"
				          android:text="@string/fast3_top_tv"/> 
				     <TextView 
				          android:id="@+id/fast3_middle_left_tv"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_weight="1"
				          
				          android:layout_marginTop="5dp"
				          android:layout_marginBottom="5dp"
				          
				          android:layout_gravity="center_vertical|left"
				          android:gravity="center_vertical|left"
				          android:background="@drawable/choose_tv_bg"
				          android:paddingLeft="10dp"
				          
				          android:textSize="14.0dp"
				          android:textColor="@color/award_info_tv_title_color"
				          android:text="@string/zwl_dballcommon_toast_1_7"/>
				     
				     <com.mitenotc.ui.ui_utils.MGridView
	                        android:id="@+id/fast3_ddm_mgv"
			                android:layout_height="53dip"
			                android:layout_width="fill_parent"
			                
			                android:verticalSpacing="5.0dp"
			                android:horizontalSpacing="5.0dp"
			                
			                android:numColumns="6"/>
				     <TextView 
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_weight="1"
				          
				          android:layout_marginTop="5dp"
				          android:layout_marginBottom="5dp"
				          
				          android:layout_gravity="center_vertical|left"
				          android:gravity="center_vertical|left"
				          android:background="@drawable/choose_tv_bg"
				          android:paddingLeft="10dp"
				          
				          android:textSize="14.0dp"
				          android:textColor="@color/award_info_tv_title_color"
				          android:text="@string/zwl_dballcommon_toast_1_8"/>
				     
				     <com.mitenotc.ui.ui_utils.MGridView
	                       
	                        android:id="@+id/fast3_dtm_mgv"
			                android:layout_height="53dip"
			                android:layout_width="fill_parent"
			                
			                android:verticalSpacing="5.0dp"
			                android:horizontalSpacing="5.0dp"
			                
			                android:numColumns="6"/>
				          
	        </LinearLayout>

</LinearLayout>
