<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    
    android:orientation="vertical" >
    	<LinearLayout 
		    android:id="@+id/LL_item1" 
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:gravity="center_vertical|center_horizontal"
		    
		    android:paddingTop="0dp"
            android:paddingBottom="0dp"
            
		    android:orientation="horizontal">
		<View 
		    android:layout_width="0.5dip"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    />  
		<!-- 序号 -->
		<TextView
		    android:id="@+id/serial_number_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:layout_weight="1.5"
		    android:textSize="14sp"
		    android:text="@string/table_title_text1"
		    android:textColor="@color/award_info_tv_title_second_color"/>
		<View 
		    android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    
		    />
	<!-- 期号  -->
	   <TextView
	       android:id="@+id/issue_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textSize="14sp"
		    android:layout_weight="1.5"
		    android:text="@string/table_title_text2"
		    android:textColor="@color/award_info_tv_title_color"/>
	   	<View 
		    android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    
		    />
	<com.mitenotc.ui.ui_utils.AddSelfEditText
		   	  
		   	   android:id="@+id/diY_multiple_ed"
		       android:layout_width="fill_parent" 
		       android:layout_height="32dip"  
		       android:layout_weight="1"
		       android:layout_gravity="center"
		        />
	   <View 
		    android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    
		    />
	   <TextView
	       android:id="@+id/addup_putinto_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		     android:gravity="center"
		    android:layout_weight="1.4"
		    android:textSize="14sp"
		    android:text="@string/table_title_text4"
		    android:textColor="@color/award_info_tv_title_color"/>
	   	<View 
		    android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    
		    />
	   	<TextView
	   	    android:id="@+id/zjyl_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:layout_weight="1.4"
		    android:gravity="center"
		    android:paddingTop="0dip"
		    android:paddingLeft="0dip"
		    android:paddingRight="0dip"
		    android:paddingBottom="0dip"
		    
		    android:textSize="12sp"
		    style="@style/textaddFont"
		    android:text="@string/table_title_text5"
		    android:textColor="@color/login_color_2"/> 
		 <View 
		    android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    
		    /> 
		<TextView
		    android:id="@+id/yll_tv"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    
		    android:paddingTop="0dip"
		    android:paddingLeft="0dip"
		    android:paddingRight="0dip"
		    android:paddingBottom="0dip"
		    
		    android:layout_weight="1.4"
		    android:textSize="12sp"
		    style="@style/textaddFont"
		    android:text="@string/table_title_text6"
		    android:textColor="@color/login_color_2"/>  
		    
		   <View 
		    android:layout_width="0.5dip"
		    android:layout_height="fill_parent"
		    android:background="@color/view_line"
		    />  
	   </LinearLayout>
	 	<View 
		    android:layout_width="fill_parent"
		    android:layout_height="0.5dip"
		    android:background="@color/view_line"
		    />  
</LinearLayout>
