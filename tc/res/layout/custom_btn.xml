<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:background="@drawable/btn_bg_white_selector"
    android:paddingBottom="0dp"
    android:orientation="horizontal" >
    <TextView
	        android:id="@+id/cstom_btn_tv1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="5dp"
	        
	         android:gravity="right"
	         android:textColor="@color/title_nav_tv_shadow_color"
	         android:text="3"
	         android:textSize="14sp"
        />


    <TextView 
        
        android:id="@+id/cstom_btn_tv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:layout_marginTop="10dp"
         android:layout_marginBottom="5dp"
        
        android:textColor="@color/award_info_tv_title_second_color"
        android:text="99%"
        android:textSize="10sp"
        />

</LinearLayout>
