<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <!--  普通投注 三不同号布局   --> 
  

 	<LinearLayout
	      android:id="@+id/fast3_show_one_Layout"
	      
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  
          android:layout_marginTop="10.0dp"
	      android:layout_marginLeft="10.0dp"
	      android:layout_marginRight="10.0dp"
	      android:layout_below="@id/reLayout"
	      
		  android:orientation="vertical">
          
 	    <LinearLayout
				        
				      android:id="@+id/fast3_show_two_Layout"
				      android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  
					  android:orientation="vertical">
					            
 	    <LinearLayout
				        
				      android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  android:layout_marginBottom="10dp"
					  
					  android:orientation="horizontal">
				       <TextView 
							          android:id="@+id/fast3_middle_left_tv"
							          android:layout_width="fill_parent"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.5"
							          
							          android:layout_gravity="center_vertical|left"
							          android:gravity="center_vertical|left"
							          android:background="@drawable/choose_tv_bg"
							          android:paddingLeft="5dp"
							          
							          android:textSize="14.0dp"
							          android:textColor="@color/award_info_tv_title_color"
							          android:text="@string/fast3_sbth_text"/>
				          <TextView 
							          android:id="@+id/fast3_middle_reight_tv"
							          android:layout_width="fill_parent"
							          android:layout_height="wrap_content"
							          android:layout_marginLeft="2dp"
							          
							           android:layout_gravity="center_vertical|center_horizontal"
							          android:layout_weight="0.2"
							          android:gravity="center_vertical|left"
							       
							          android:textSize="14.0dp"
							          android:textColor="@color/award_info_tv_title_color"
							          android:text="@string/fast3_top_tv1"/>
				    
				    
		
				     </LinearLayout>
				     		    
				     <com.mitenotc.ui.ui_utils.MGridView
	                       
	                        android:id="@+id/sbth_mgv"
			                android:layout_height="53dip"
			                android:layout_width="fill_parent"
			                
			                
			                android:verticalSpacing="5.0dp"
			                android:horizontalSpacing="5.0dp"
			                
			                android:numColumns="6"
			                
			                
			                />
				</LinearLayout>
				<LinearLayout
				        
				      android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  
				      android:layout_marginTop="10dp"
					  
					  android:orientation="horizontal">
				       <TextView 
							          android:layout_width="fill_parent"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.6"
							          
							          android:layout_gravity="center_vertical|left"
							          android:gravity="center_vertical|left"
							          android:background="@drawable/choose_tv_bg"
							          android:paddingLeft="5dp"
							          
							          android:textSize="14.0dp"
							          android:textColor="@color/award_info_tv_title_color"
							          android:text="@string/fast3_ebth_text1"/>
				          <TextView 
				                     android:id="@+id/fast3_middle_reight_tv1"
							          android:layout_width="fill_parent"
							          android:layout_height="wrap_content"
							          android:layout_marginLeft="2dp"
							          
							           android:layout_gravity="center_vertical|center_horizontal"
							          android:layout_weight="0.2"
							          android:gravity="center_vertical|left"
							       
							          android:textSize="14.0dp"
							          android:textColor="@color/award_info_tv_title_color"
							          android:text="@string/sbth_tv_text"/>
				    
				     </LinearLayout>
				     
	
				
			   		    <com.mitenotc.ui.ui_utils.MGridView
				              android:id="@+id/sbth_tmgv"
				              android:gravity="center"
				              android:layout_gravity="center_horizontal|center_vertical"
			                
				                android:layout_width="fill_parent"
						        android:layout_height="fill_parent"
						        android:layout_weight="0.8"
				                android:verticalSpacing="15.0dip"
				                android:horizontalSpacing="5.0dip"
			                
			                android:numColumns="1"
			                
			                />
     </LinearLayout>
 

</LinearLayout>
