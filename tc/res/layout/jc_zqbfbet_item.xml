<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@drawable/item_pass_selector"
    android:gravity="center" >

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/item_pass_selector"
        android:gravity="center" 
        android:orientation="horizontal">

      
 <LinearLayout
     android:id="@+id/dele_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.9">
        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jc_betleft_btn" />
     
 </LinearLayout>

       
 <!-- 篮彩专用  非混关专用 -->
        <LinearLayout
            android:id="@+id/lan_llayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lan_text_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zhu"
                    style="@style/text_13_606060"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="--" />

                <TextView
                    android:id="@+id/tv_jclq_dxf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.33"
                    android:gravity="center"
                    android:text="vs"
                    android:textColor="@color/btn_gray_u"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ke"
                    style="@style/text_13_606060"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:gravity="center"
                    android:text="--" />
            </LinearLayout>


            <TextView
                
                android:id="@+id/select_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:drawableRight="@drawable/table_arrow"
                android:background="@color/dialog_title_tv_color"
                android:layout_marginTop="5dip"
                android:padding="5dp"
                android:layout_marginBottom="10dip"
                android:textSize="14sp"
                android:textColor="@color/text_red"
                android:text="" />
        
        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/dan_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_weight="1.8">
          <Button
            android:id="@+id/invariant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/set_dan_bg_false"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="胆"
            android:textColor="@color/award_info_tv_title_color"
            android:textSize="14.0sp" />
        <!-- android:background="@drawable/zq_spf_rbtn_middle_selector" -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>