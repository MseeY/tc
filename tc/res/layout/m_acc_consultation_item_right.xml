<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="#efefef" >

    <LinearLayout
        android:paddingBottom="10dip"
        android:id="@+id/ll_consultation_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
		<TextView
		    android:paddingRight="15dip"
            android:paddingTop="8dip"
            android:paddingBottom="4dip"
            android:paddingLeft="9dip"
            android:id="@+id/tv_acc_consultation_content_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dip"
            android:text="正在加载.."
            android:background="@drawable/acc_consultation_item_right"
            android:textColor="#000000"
            android:textSize="15sp" />
        
        <ImageView
            android:id="@+id/iv_acc_consultation_content_right"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="6dip"
            android:src="@drawable/acc_online_customer" />
        
    </LinearLayout>
</RelativeLayout>