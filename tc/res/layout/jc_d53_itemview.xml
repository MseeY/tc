<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_color_6"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_color_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/jc_c_openbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jc_c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="name"
                android:textColor="@color/award_info_tv_title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="000"
                android:textColor="@color/award_info_tv_title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="time截止"
                android:textColor="@color/award_info_tv_title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ratio_show_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/d1"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jc_rbtn_gp"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/T0"
            style="@style/text_13_606060"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="----" />

        <TextView
            android:id="@+id/T1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
            android:gravity="center"
            android:text="vs"
            android:textColor="@color/award_info_tv_title_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/T2"
            style="@style/text_13_606060"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="----" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />
    
    
    <com.mitenotc.ui.ui_utils.CheckboxGroup
        android:id="@+id/chbox_gp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:clickable="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" 
        android:orientation="vertical" >
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="25dp"
           android:paddingBottom="0.0dp"
	       android:paddingLeft="0dp"
	       android:paddingRight="0dp"
	       android:paddingTop="0.0dp"
	       android:padding="0dp"
	       android:orientation="horizontal" >

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/jc_bqc_bg_selector"
                android:textColor="@color/rbtn_text_color_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center_vertical|center_horizontal"
                android:tag="0"
                android:text="0 -.--"
                android:textSize="14.0sp" />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:tag="1"
                android:checked="false"
                android:text="1 -.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />


            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="2"
                android:checked="false"
                android:text="2 -.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />
            
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="3"
                android:checked="false"
                android:text="3 -.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />
        </LinearLayout>
<LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="25dp"
           android:paddingBottom="0.0dp"
	       android:paddingLeft="0dp"
	       android:paddingRight="0dp"
	       android:paddingTop="0.0dp"
	       android:padding="0dp"
	       android:orientation="horizontal" >

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/jc_bqc_bg_selector"
                android:textColor="@color/rbtn_text_color_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center_vertical|center_horizontal"
                android:tag="4"
                android:text="4 -.--"
                android:textSize="14.0sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:tag="5"
                android:checked="false"
                android:text="5 -.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />


            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="6"
                android:checked="false"
                android:text="6 -.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/jc_bqc_bg_selector"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="7"
                android:checked="false"
                android:text="7+  --.--"
                android:textColor="@color/rbtn_text_color_selector"
                android:textSize="14.0sp" />
        </LinearLayout>
          </com.mitenotc.ui.ui_utils.CheckboxGroup> 
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        
        android:id="@+id/item_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_color_1"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="投注比例"
            android:textColor="@color/blue0"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0%"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0%"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0%"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>