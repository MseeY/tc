<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="25dip"
            android:text="请选择您要充值的金额"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/line_gray1" />

        <FrameLayout
            android:layout_marginBottom="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_unicom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_phone_recharge_3"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="3元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_phone_recharge_3"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_recharge_15"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="15元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_phone_recharge_15"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_recharge_30"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="30元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_phone_recharge_30"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mobile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_mobile_recharge_9"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="15元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_mobile_recharge_9"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_recharge_15"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="30元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_mobile_recharge_15"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_recharge_30"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="45元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_mobile_recharge_30"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_recharge_60"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="90元"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_mobile_recharge_60"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_recharge_other"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_mobile_other_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:text="其他"
                        android:textColor="@color/text_yellow"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:background="@drawable/phone_pay_circle_bg"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_mobile_recharge_other"
                            android:layout_width="20dip"
                            android:layout_height="20dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/line_gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="25dip" >

        <Button
            android:id="@+id/bt_phone_recharge_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_red_selector"
            android:gravity="center|center_vertical|center_horizontal"
            android:padding="10dip"
            android:text="下一步"
            android:textColor="@color/login_color_5"
            android:textSize="@dimen/login_buletext"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:text="1、请使用北京联通电话号码进行充值，固话号码前请加010；"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="2、充值金额不能提现；"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="3、联通3元话费=2元彩金；"
        android:textColor="#999999"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="2、"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联通15元话费=10元彩金；"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="2、"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联通30元话费=20元彩金；"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:text="4、扣除话费与充值彩金之间的差额由运营商和或服务提供商收取；"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:text="5、点击“确认”后，请在5分钟内使用填写的电话拨打16889518北京联通声讯电话完成充值；"
        android:textColor="#999999"
        android:textSize="13sp" />

</LinearLayout>