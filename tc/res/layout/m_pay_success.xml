<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF" >

    <LinearLayout
        android:id="@+id/ll_aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/paysuccess_processing_pb"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/paysuccess_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您，购彩成功！"
                android:textColor="@color/text_red"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="17dip"
            android:orientation="horizontal"
            android:padding="0dp" >

            <Button
                android:layout_marginRight="5dip"
                android:id="@+id/paysuccess_rebug_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_red_selector"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="10dip"
                android:text="继续购彩"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/paysuccess_check_order_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_orange_selector"
                android:gravity="center|center_vertical|center_horizontal"
				android:padding="10dip"
                android:text="查看订单"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

