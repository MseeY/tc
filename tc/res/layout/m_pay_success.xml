    <LinearLayout
        android:id="@+id/ll_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_aa"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的账户余额为:"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/paysuccess_cashamount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_red"
            android:textSize="15sp" />

		</LinearLayout>
        <TextView
            android:id="@+id/paysuccess_recharge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即充值"
            android:padding="5dip"
            android:textColor="#007AFF"
            android:textSize="14sp" />
    </LinearLayout>
    
     <TextView
        android:id="@+id/wenzi_chongzhi"
        android:layout_below="@+id/ll_chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_marginTop="10dip"
        android:text="如果您在线支付遇到了困难，请联系在线客服，或选择其他充值方式；"
        android:textColor="#999999"
        android:textSize="13sp" />

    <TextView
        android:layout_below="@id/wenzi_chongzhi"
        android:id="@+id/tv_acc_out_online_ask1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:drawableLeft="@drawable/acc_online_ask"
        android:drawablePadding="5dip"
        android:layout_marginTop="5dip"
        android:text="在线客服"
        android:textColor="#007aff"
        android:textSize="14sp" />
