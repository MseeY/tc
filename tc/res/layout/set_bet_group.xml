<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:filterTouchesWhenObscured="true"
    android:background="#b0000000">
  <RelativeLayout
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_title_tv_color"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_alignParentBottom="true">
       <!--  android:layout_marginBottom="74dp" -->
      
    <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="28.0dip"
                android:gravity="center"
                android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_group_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="28.0dip"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="3dp"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:text="@string/bet_tv_upText"
                        
                        android:background="@color/white"
                        android:drawableRight="@drawable/drop_down_d"
                        android:textColor="@color/award_info_tv_title_second_color"
                        android:textSize="14sp" />
   <!--     android:drawableRight="@drawable/chbx_group_selector" -->

                <LinearLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="fill_parent"
                    android:layout_height="28.0dip"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView
                        android:id="@+id/tv54"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.9"
                        android:padding="2dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/bet_tv_castText"
                        android:textColor="@color/award_info_tv_title_second_color"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/pop_multiple_number_ed"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@drawable/ed_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:paddingBottom="2.5dip"
                        android:paddingTop="3.0dip"
                        android:text="1"
                        android:hint="1"
                        android:textColor="@color/award_info_tv_title_color"
                        android:textColorHint="@color/znzh_coustom_text"
                        android:imeOptions="actionNone"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv55"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:text="@string/bet_tv_againText"
                        android:textColor="@color/award_info_tv_title_second_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
	<com.mitenotc.ui.ui_utils.MGridView
	        android:id="@+id/bet_group_1"
	        android:layout_below="@id/layout"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginBottom="5dip"
	        android:verticalSpacing="5dip"
	        android:horizontalSpacing="5dip"
	        android:numColumns="auto_fit" 
	        android:columnWidth="60dip"/>
	<LinearLayout 
	      android:id="@+id/bet_m_layout"
	      android:layout_height="wrap_content"
	      android:layout_width="fill_parent"
	      android:layout_below="@id/bet_group_1"
	      android:layout_marginRight="10dp"
	      android:layout_marginLeft="10dp"
	      android:layout_marginBottom="5dp"
	      android:orientation="horizontal">
	    <CheckBox 
	      android:id="@+id/more_chbx_id"
		  android:layout_height="wrap_content"
		  android:layout_width="fill_parent"
		  android:layout_weight="2"
		  android:gravity="left"
		  android:layout_marginRight="20dp"
		  android:textColor="@color/red_chbx_text"
		  android:button="@null"
		  android:text="收起更多"
		  android:background="@null"
		  android:drawableRight="@drawable/drop_down_u"
	      />
	    <TextView 
	       android:id="@+id/explain_id"
		  android:layout_height="fill_parent"
		  android:layout_width="fill_parent"
		  android:layout_weight="1"
		  android:padding="2dp"
		  android:paddingRight="20dp"
		  android:gravity="center_vertical|right"
		  android:textColor="@color/red_chbx_text"
		  android:text=""/>
	</LinearLayout>
	<com.mitenotc.ui.ui_utils.MGridView
	        android:id="@+id/bet_group_2"
	        android:layout_below="@id/bet_m_layout"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        
	        android:verticalSpacing="5dip"
	        android:horizontalSpacing="5dip"
	        
	        android:numColumns="auto_fit" 
	        android:columnWidth="60dip"/>
	</RelativeLayout> 
</RelativeLayout>