<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dip" >



        <LinearLayout
            android:id="@+id/about_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_logo4"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/acc_about_logo1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/acc_about_logo2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/acc_about_logo3" />
            </LinearLayout>
        </LinearLayout>
                <LinearLayout
            android:id="@+id/about_logo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/about_logo"
            android:layout_below="@+id/about_logo"
            android:layout_marginTop="23dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本："
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_acc_setting_about_verson_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.1.6"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_acc_setting_about_check_verson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dip"
                android:padding="3dip"
                android:background="@drawable/btn_bg_red_selector"
                android:text="检测新版本"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_logo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/about_logo1"
            android:layout_below="@id/about_logo1"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_text_guanwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官网："
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_acc_about_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#007aff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_logo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/about_logo2"
            android:layout_below="@id/about_logo2"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_text_banquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版权："
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/copyright_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
        
<!-- 		<TextView
            android:id="@+id/tv_about_qun"
            android:layout_alignRight="@id/about_logo3"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:layout_below="@id/about_logo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泰彩官方qq群：258245971"
            android:textColor="#FF0000"
            android:textSize="15sp"
            /> -->
        
        <LinearLayout
        android:layout_alignRight="@id/about_logo3"
        android:id="@+id/ll_about_cefu_phoneNumber"
        android:layout_below="@id/about_logo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:visibility="gone">
        
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/small_icon_online_phone"
                android:textColor="@color/text_red"
                android:drawablePadding="10dip"
                />
            
            <TextView
                android:id="@+id/tv_about_phoneNumber"
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/text_red"
                android:drawablePadding="10dip"
                />
        </LinearLayout>
        

        <View
            android:layout_marginTop="109dip"
            android:id="@+id/about_logo4"
            android:layout_width="245dip"
            android:layout_height="1dip"
            android:layout_below="@id/about_logo3"
            android:layout_marginBottom="10dip"
            android:background="#00000000" />

    </RelativeLayout>

</LinearLayout>