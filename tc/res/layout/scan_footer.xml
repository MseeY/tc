<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:background="@drawable/scan_title_bg" >

    <LinearLayout
        android:paddingRight="-30dip"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         
        <Button
            android:id="@+id/btn_scan_photo"
            android:layout_marginBottom="5dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/btn_bg_scan_photo_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>
        <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         
        <Button
            android:id="@+id/btn_scan_light"
            android:layout_marginBottom="5dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/scan_light"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开灯"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>
        <LinearLayout
        android:paddingLeft="-30dip"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         
        <Button
            android:id="@+id/btn_scan_myorcode"
            android:layout_marginBottom="5dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/btn_bg_scan_code_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的二维码"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>