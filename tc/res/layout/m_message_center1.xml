<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
        android:padding="0dip" >

        <RelativeLayout
            android:id="@+id/rl_acc_msg_btn1"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_acc_msg_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网站公告"
                android:textColor="#ef2d33"
                android:textSize="15sp" />
            
            <ImageView
                android:id="@+id/iv_acc_msg_img1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="10dip"
                android:layout_height="6dip"
                android:src="@drawable/small_icon_sanjiao"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_acc_msg_btn2"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_acc_msg_text2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站内新闻"
                android:textColor="#000000"
                android:textSize="15sp" />
            
            <ImageView
                android:id="@+id/iv_acc_msg_img2"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="10dip"
                android:layout_height="6dip"
                android:src="@drawable/small_icon_sanjiao"/>
        </RelativeLayout>

       <RelativeLayout
           	android:id="@+id/rl_acc_msg_btn3"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_acc_msg_text3"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家推荐"
                android:textColor="#000000"
                android:textSize="15sp" />
            
            <ImageView
                android:id="@+id/iv_acc_msg_img3"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="10dip"
                android:layout_height="6dip"
                android:src="@drawable/small_icon_sanjiao"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ii_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>