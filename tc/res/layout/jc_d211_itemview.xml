<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_color_6"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ll_jc_d211_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
      <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/login_color_8" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        android:clickable="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/jc_c_openbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:paddingTop="5dip"
            android:background="@color/dialog_title_tv_color"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:paddingTop="2dp"
                android:textColor="@color/award_info_tv_title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text=" "
                android:textColor="@color/white"
                android:background="@drawable/bg_shape_jccc"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/session"
                android:gravity="center"
                android:text=""
                android:textColor="@color/award_info_tv_title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ratio_show_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:drawableTop="@drawable/d1"
                android:paddingTop="1dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/jc_rbtn_gp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical" >
		 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/zhu"
                    style="@style/text_13_606060"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="- -" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.55"
                    android:gravity="center"
                    android:text="vs"
                    android:textColor="@color/btn_gray_u"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ke"
                    style="@style/text_13_606060"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="- -" />
            </LinearLayout>
            
		 	<Button
		 	    android:id="@+id/btn_jc_d211"
		 	    android:layout_marginTop="6dip"
		 	      android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clickable="true"
                  android:paddingTop="6dip"
                  android:lines="1"
                  android:paddingBottom="6dip"
                  android:textSize="14sp"
                  android:text="点击选择比分"
                  android:background="@drawable/btn_bg_white_selector"
		 	    />
            
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:visibility="gone"
        
        android:id="@+id/item_item_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/znzh_coustom_text"
            android:text="投注比例"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
<!--             android:background="@drawable/jc_bl_l" -->

        <TextView
            android:id="@+id/xa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/bl_text"
            android:background="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />
<!--             android:background="@drawable/jc_bl_r" -->

        <TextView
            android:id="@+id/xb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/bl_text"
              android:background="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/bl_text"
            android:background="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    </LinearLayout>
    
           <View
        android:layout_below="@id/ll_jc_d211_layout"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/login_color_8" />
    
    <View
	        android:visibility="gone"
	        
	        android:focusable="false"
	        android:focusableInTouchMode="true"
	        android:id="@+id/not_optional_view"
	        android:layout_alignParentTop="true"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    style="@style/dialog_theme"
		    android:background="@color/dialog_bg"/>

</RelativeLayout>