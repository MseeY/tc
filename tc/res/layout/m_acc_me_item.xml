<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/acc_me_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_acc_me_bg8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="11dip"
            android:paddingTop="11dip" >

            <ImageView
                android:id="@+id/iv_acc_me_logos"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_marginLeft="17dip"
                android:background="#000000"
                android:gravity="center" >
            </ImageView>

            <TextView
                android:id="@+id/tv_acc_me_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dip"
                android:text="正在加载..."
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="17dip"
                    android:background="@drawable/small_icon_right1" />
            </LinearLayout>
        </LinearLayout>
        
         <View
        android:layout_alignTop="@id/acc_me_item_bg"
        android:id="@+id/acc_me_item_oneline"
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="#d6d6d6"
        android:visibility="visible" />

        <View
            android:id="@+id/acc_me_item_shortline"
            android:layout_alignBottom="@id/acc_me_item_bg"
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:background="#ececec"
            android:visibility="visible" />
        <View
        android:id="@+id/acc_me_item_longline"    
        android:layout_alignBottom="@id/acc_me_item_bg"
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="#d6d6d6"
        android:visibility="visible" />
    </RelativeLayout>
      <View
        android:id="@+id/acc_me_item_juli"    
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#EFEFEF"
        android:visibility="gone" />
</LinearLayout>