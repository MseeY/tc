<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="5dip"
        android:orientation="horizontal"
        android:paddingBottom="2dip" >

        <ImageView
            android:layout_width="18dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="3dip"
            android:src="@drawable/small_icon_record" />

        <TextView
            android:id="@+id/tv_acc_msg_text1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="全部记录"
            android:textColor="#606060"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/ii_records_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="50dip" >

            <ImageView
                android:id="@+id/iv_acc_records_circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acc_circle" />

            <ImageView
                android:id="@+id/iv_acc_records_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/acc_circle_bg" />

            <ImageView
                android:id="@+id/iv_acc_records_circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/acc_circle_bg" />

            <ImageView
                android:id="@+id/iv_acc_records_circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/acc_circle_bg" />

            <ImageView
                android:id="@+id/iv_acc_records_circle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/acc_circle_bg" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>