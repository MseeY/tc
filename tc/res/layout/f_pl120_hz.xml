<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  	<!-- 和值布局      -->
	
	<LinearLayout
	  android:id="@+id/linearLayout4" 
      android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
      
      android:layout_marginTop="10dp"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="0dp"
	  android:orientation="vertical">
	      <!-- 和值选号容器 -->
	<com.mitenotc.ui.ui_utils.MGridView
	                       
                    android:id="@+id/hz_mgv"
	                android:layout_height="270dip"
	                android:layout_width="fill_parent"
	                
	                android:verticalSpacing="2dp"
	                android:horizontalSpacing="4dp"
	                
	                android:numColumns="4"
	                android:columnWidth="40dip"
	                />
	            <TextView 
				          android:id="@+id/fast3_hz_bottom_tv"
				          android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          
				          android:gravity="center"
				          android:paddingTop="10dp"
				          android:textSize="14.0dp"
				          android:textColor="@color/award_info_tv_title_color"
				          android:text="@string/fast3_he_bottom_tv"/>
	          <LinearLayout
			       
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:gravity="center"
			            
			             android:layout_marginLeft="5.5dip"
			             android:layout_marginRight="5.5dip"
			             android:layout_marginTop="5.5dp"
			              
			              android:paddingTop="0.0dp"
			              android:paddingBottom="0.0dp"
			              android:paddingLeft="0dp"
			              android:paddingRight="0dp"
			            android:orientation="horizontal">
				      <com.mitenotc.ui.ui_utils.GridRadioGroup 
			              android:id="@+id/saleType_grg"
					      android:layout_width="fill_parent"
			              android:layout_height="fill_parent" 
			              android:layout_weight="1"
			             
			              android:layout_marginRight="2.5dip"
			              
					      android:orientation="horizontal">
				       
						            
					                <CheckBox  
									      android:id="@+id/chbox0"
							              
									      android:layout_width="fill_parent"
							              android:layout_height="30dp"
							              android:layout_weight="1"
							              android:tag="1"
							    
								          android:background="@drawable/fast3_hz_rbtn_selector"
								          android:textColor="@drawable/fast3_hz_text_selector"
									      
							              android:gravity="center"
									      android:button="@null"
							              android:text="@string/fast3_rbtn_da"
							              android:padding="0dp"
							              android:textSize="14.0sp" />

			
								     <CheckBox
								         android:id="@+id/chbox1"
								         
								         android:layout_width="fill_parent"
								         android:layout_height="30dp"
								         android:layout_weight="1"
								         android:tag="2"
								         
								         android:layout_marginLeft="5.5dp"
								         
								         android:button="@null"
								         android:gravity="center"
								          android:background="@drawable/fast3_hz_rbtn_selector"
								          android:textColor="@drawable/fast3_hz_text_selector"
								          
								         android:padding="0dp"
								         android:text="@string/fast3_rbtn_xiao"
								         android:textSize="14.0sp" />
					         </com.mitenotc.ui.ui_utils.GridRadioGroup>
					   
					   <com.mitenotc.ui.ui_utils.GridRadioGroup 
			              android:id="@+id/saleType_grg"
					      android:layout_width="fill_parent"
			              android:layout_height="fill_parent" 
			              android:layout_weight="1"
			              android:layout_marginRight="5.5dp"
			              android:layout_marginLeft="2.5dp"
			             
					      android:orientation="horizontal">
				       
						            
					               <CheckBox
									      android:id="@+id/chbox2"
							              
									      android:layout_width="fill_parent"
							              android:layout_height="30dp"
							              android:layout_weight="1"
							              android:tag="30"
							              
							              
							              android:background="@drawable/fast3_hz_rbtn_selector"
								          android:textColor="@drawable/fast3_hz_text_selector"
									      
							              android:gravity="center"
							              android:padding="0dp"
									      android:button="@null"
							              android:text="@string/fast3_rbtn_dan"
							              android:textSize="14.0sp" />
						
			
								     <CheckBox
								         android:id="@+id/chbox3"
								         
								         android:layout_width="fill_parent"
								         android:layout_height="30dp"
								         android:layout_weight="1"
								         android:tag="40"
								         android:layout_marginLeft="5.5dp"
								         
								         android:button="@null"
								         android:gravity="center"
								         android:padding="0dp"
								        
								         android:background="@drawable/fast3_hz_rbtn_selector"
								          android:textColor="@drawable/fast3_hz_text_selector"
								         
								         
								         android:text="@string/fast3_rbtn_shuang"
								         android:textSize="14.0sp" />
					         </com.mitenotc.ui.ui_utils.GridRadioGroup>
		         </LinearLayout>
	</LinearLayout>
</LinearLayout>
