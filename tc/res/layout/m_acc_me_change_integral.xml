<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:background="@drawable/dialog_title_nav_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@id/dialog_title_iv_left"
            style="@style/title_nav_iv_style"
            android:src="@drawable/title_nav_back"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分兑换"
            android:layout_marginRight="40dip"
            android:textColor="@color/dialog_title_tv_color"
            android:textSize="@dimen/dialog_title_tv_size" />

        <ImageView
            android:id="@+id/iv_integral_close"
            style="@style/title_nav_iv_style"
            android:src="@drawable/pop_close" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分："
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_acc_integral_balance"
            android:drawableLeft="@drawable/acc_me_diamonds"
            android:drawablePadding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/text_red"
            android:textSize="13sp"
            android:textStyle="bold" />
        
      	<TextView
      	    android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分兑换比例："
            android:textColor="#000000"
            android:textSize="13sp"/>
      	
      <TextView
            android:drawableLeft="@drawable/acc_me_diamonds"
            android:drawablePadding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 = 1元"
            android:textColor="@color/text_red"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分兑换所得红包有效期为30天，过期系统自动收回！"
            android:textColor="#999999"
            android:textSize="13sp" />

    </LinearLayout>
    
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DDDDDD" />
        
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换："
            android:textColor="#000000"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_acc_integral_input"
            android:layout_width="160dip"
            android:layout_height="30dip"
            android:background="@drawable/ed_bg"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:lines="1"
            android:paddingLeft="8dip"
            android:inputType="number"
            android:maxLength="10"
            android:hint="请输入要兑换的金额"
            android:textColorHint="#999999"
            android:textColor="#606060"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  元红包"
            android:textColor="#000000"
            android:textSize="13sp" />

    </LinearLayout>
    
     <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip" >

            <Button
                android:id="@+id/bt_acc_integral_Ok"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
              	android:layout_width="match_parent"
            	android:layout_height="41dip"
            	android:padding="0dip"
            	android:textColor="#FFFFFF"
            	android:textSize="16sp"
            	android:background="@drawable/btn_bg_orange_selector"
                android:text="兑换" />

            <Button
                android:id="@+id/bt_acc_integral_cancel"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
              	android:layout_width="match_parent"
            	android:layout_height="41dip"
            	android:padding="0dip"
            	android:textColor="#000000"
            	android:textSize="16sp"
            	android:background="@drawable/btn_bg_gray_selector"
                android:text="取消" />
        </LinearLayout>

</LinearLayout>