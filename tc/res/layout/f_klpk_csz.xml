<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <!-- 猜顺子专用--> 
	<LinearLayout
	      android:id="@+id/fast3_show_one_Layout"
	      
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:orientation="vertical">
		  	<LinearLayout
	              android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:gravity="center|left"
				  android:orientation="horizontal">
		  
				     <TextView 
				         
				          android:id="@+id/pk3_tv_oneMark"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          
				          android:layout_gravity="center_vertical|left"
				          android:gravity="center"
				          android:background="@drawable/shape_blueshake_reightbg"
				          android:paddingTop="4dp"
				          android:paddingBottom="4dp"
				          android:paddingLeft="5dp"
				          android:paddingRight="15dp"	
				          android:textSize="14sp"
				          android:textColor="@color/white"
				          android:text="@string/f_pk_dxtext"/>
	               <TextView 
				          android:id="@+id/pk3_tv_one"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          
                         				       
				          android:textSize="14.0dip"
				          android:paddingLeft="10dip"
				          android:paddingTop="4dp"
				          android:paddingBottom="4dp"
				          android:paddingRight="15dp"
				          android:textColor="@color/blue1"
				          android:text="@string/f_pk_dxtext1"/> 
				          
				     
				     </LinearLayout>
				     
				     <com.mitenotc.ui.ui_utils.MGridView
	                        android:id="@+id/pk3_mgv_one"
			                android:layout_height="420dip"
			                android:layout_width="fill_parent"
			                
			                android:layout_marginTop="10dip"
			                android:layout_marginLeft="15dip"
			                android:layout_marginRight="15dip"
			                
			                android:verticalSpacing="5.0dip"
			                android:horizontalSpacing="15.0dip"
			                
			                android:numColumns="3"/>
				    <LinearLayout
			              android:layout_width="fill_parent"
						  android:layout_height="wrap_content"
						  
						  android:layout_marginBottom="10dip"
						  android:gravity="center|left"
						  android:orientation="horizontal">
		  
				     <TextView 
				         
				          android:id="@+id/pk3_tv_twoMark"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          
				          
				          android:layout_gravity="center_vertical|left"
				          android:gravity="center"
				          android:background="@drawable/shape_blueshake_reightbg"
				          android:paddingTop="4dp"
				          android:paddingBottom="4dp"
				          android:paddingLeft="5dp"
				          android:paddingRight="15dp"	
				          android:textSize="14sp"
				          android:textColor="@color/white"
				          android:text="@string/f_pk_bxtext"/>
	               <TextView 
				          android:id="@+id/pk3_tv_two"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          
				          android:paddingTop="4dp"
				          android:paddingBottom="4dp"
				          android:paddingRight="15dp"
				          android:paddingLeft="10dp"
				          android:textSize="14.0dip"
				          android:textColor="@color/blue1"
				          android:text="@string/f_pk_bxtext1"/> 
				          
				     
				     </LinearLayout>
				     
				     
				     <com.mitenotc.ui.ui_utils.MGridView
	                       
	                        android:id="@+id/pk3_mgv_two"
			                android:layout_height="wrap_content"
			                android:layout_width="wrap_content"
			                
			                android:layout_marginLeft="5dip"
			                
			                android:verticalSpacing="5.0dip"
			                android:horizontalSpacing="5.0dip"
			                
			                android:numColumns="1"/>
				          
	        </LinearLayout>

</LinearLayout>
